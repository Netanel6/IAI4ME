<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".worker.fragments.actions.send_request.SendRequestActivity">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_send_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/upper_nav_send_request"
        android:background="?android:attr/windowBackground"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bottom_nav_send_request"
        android:layout_marginTop="0dp" >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="בחר אחד מהאפשרויות הבאות למעלה"/>
    </FrameLayout>

</RelativeLayout>