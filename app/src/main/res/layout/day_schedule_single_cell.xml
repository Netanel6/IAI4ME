<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="4dp"
android:orientation="horizontal"
>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="AC Date Added"

        android:textColor="@android:color/black"
        android:textSize="14sp" />


    <TextView
        android:gravity="center"
        android:id="@+id/tv_date_added"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="AC Date Added"

        android:textColor="@android:color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_ac_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="AC Name"

        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_ac_model"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="AC Model"
        android:textSize="15sp"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/tv_date_worker_list"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="AC Date"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"

        />


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/ac_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/airplane_picture_a380" />


</LinearLayout>
</LinearLayout>
